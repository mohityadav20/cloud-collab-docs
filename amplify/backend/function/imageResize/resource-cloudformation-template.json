{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda function to resize uploaded images",
  "Parameters": {
    "env": {
      "Type": "String",
      "Default": "NONE"
    },
    "functionName": {
      "Type": "String",
      "Default": "imageResize"
    },
    "bucketName": {
      "Type": "String",
      "Default": ""
    },
    "storageBucketName": {
      "Type": "String",
      "Default": ""
    }
  },
  "Resources": {
    "ImageResizeFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {
          "Fn::Join": ["", [{ "Ref": "functionName" }, "-", { "Ref": "env" }]]
        },
        "Runtime": "nodejs20.x",
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": ["ImageResizeFunctionRole", "Arn"]
        },
        "Timeout": 30,
        "MemorySize": 512,
        "Environment": {
          "Variables": {
            "THUMBNAIL_BUCKET": { "Ref": "storageBucketName" },
            "THUMBNAIL_PREFIX": "thumbnails/"
          }
        }
      }
    },
    "ImageResizeFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "lambda-execution",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          },
          {
            "PolicyName": "s3-access",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:aws:s3:::",
                          { "Ref": "storageBucketName" },
                          "/*"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "S3TriggerEvent": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { "Ref": "bucketName" },
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": ["ImageResizeFunction", "Arn"]
              },
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "uploads/images/"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "ImageResizeFunction"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": ["ImageResizeFunction", "Arn"]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}

